<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="unilim.projet.ponk"
    android:versionCode="1"
    android:versionName="1.0" >

     <uses-permission android:name="android.permission.INTERNET" /> 
    
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="unilim.projet.ponk.MainMenu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="unilim.projet.ponk.SettingsMenu"
            android:label="@string/title_activity_settings_menu" >
        </activity>
        <activity
            android:name="unilim.projet.ponk.GameActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_game"
            android:theme="@style/FullscreenTheme" >
        </activity>
    </application>

</manifest>
